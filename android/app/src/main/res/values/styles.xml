<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:statusBarColor">@color/app_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerStyle">@style/SpinnerDropDownItem</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorControlActivated">#010101</item>
        <item name="android:textColorHighlight">#010101</item>
      </style>
    
      <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#0C0C0C</item>
        <item name="android:yearListSelectorColor">#010101</item>
        <item name="android:background">#010101</item>
      </style>
    
      <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
        >
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">#010101</item>
      </style>
    
      <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#010101</item>
      </style>

</resources>
